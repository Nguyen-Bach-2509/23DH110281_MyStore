@model IEnumerable<_23DH110281_MyStore.Models.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>DANH SÁCH MCUJ SẢN PHẨM</h2>

<p>
    @Html.ActionLink("Thêm mới", null, new {@class = "btn btn-primary"})
</p>
<table class="table">
    <tr>
        <th>
            @*Html.DisplayNameFor(model => model.CategoryName)*@
            TÊN DANH MỤC
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CategoryName)
        </td>
        <td>
            @Html.ActionLink("Cập nhật", "Edit", new { id=item.CategoryID }, new { @class = "btn btn-primary" }) |
            @Html.ActionLink("Xoá", "Delete", new { id=item.CategoryID }, new { @class = "btn btn-primary" })
        </td>
    </tr>
}

</table>
